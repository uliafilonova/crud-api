{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2016",
      "rootDir": ".",
      "outDir": "build",
      "noImplicitAny": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,           
    },
    "lib": ["ESNext"],
    "exclude": [
      "node_modules",
      "build"
    ]
  }
  